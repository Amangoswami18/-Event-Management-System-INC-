<!DOCTYPE html>
<html lang="hi">
<head>
  <meta charset="UTF-8">
  <title>Admin Panel</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: #f8f9fa;
      font-family: 'Segoe UI', sans-serif;
      padding: 30px;
    }

    .card {
      max-width: 800px;
      margin: auto;
      border-radius: 12px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.1);
      background-color: #fff;
      padding: 25px;
    }

    .card h2 {
      text-align: center;
      margin-bottom: 20px;
      color: #343a40;
    }

    .add-btn {
      margin-bottom: 15px;
      display: inline-block;
    }

    table th, table td {
      vertical-align: middle;
    }

    a.btn-action {
      margin-right: 5px;
      font-size: 0.9rem;
    }
  </style>
</head>
<body>

  <div class="card">
    <h2>Event List (Admin)</h2>

    <a href="/events/add" class="btn btn-success add-btn">âž• Add New Event</a>

    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead class="table-light">
          <tr>
            <th>S. No.</th>
            <th>Event Name</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% events.forEach((event, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= event.name %></td>
              <td>
                <a href="/events/details/<%= event.id %>" class="btn btn-info btn-sm btn-action">Show Report</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
